<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function showAlert(message) {
            alert(message);
        }

        function showCategories() {
            document.getElementById("categoryCards").classList.remove("d-none");
        }
    </script>

    <style>
        .form-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .card-container {
            margin-top: 30px;
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        .link {
            text-decoration: none;
            color: #007bff;
        }

        .link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body> 

    <div class="container">
        <div class="form-container shadow p-4">
            <h2>Add Category</h2>
            <form action="/category" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="catId" class="form-label">Category ID:</label>
                    <input type="text" class="form-control" id="catId" name="categoryId" placeholder="Enter category ID" required autocomplete="off">
                </div>
                <div class="mb-3">
                    <label for="catName" class="form-label">Category Name:</label>
                    <input type="text" class="form-control" id="catName" name="categoryName" placeholder="Enter category name" required autocomplete="off">
                </div>
                <div class="mb-3">
                    <label for="catImage" class="form-label">Category Image:</label>
                    <input type="file" class="form-control" id="catImage" name="categoryImage" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary submit-btn" onclick="greet()">Add Category</button>
            </form>
            <p class="mt-3">Go to Admin Home <a class="link" href="/admin">Admin Home</a></p>
        </div>

        <!-- Show All Categories Button -->
        <div class="text-center mt-4">
            <button class="btn btn-success" onclick="showCategories()">Show All Categories</button>
        </div>

        <!-- Category Cards (Initially Hidden) -->
        <div id="categoryCards" class="card-container row d-none">
            <% if (categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="/uploads/<%= category.categoryImage %>" class="card-img-top" alt="<%= category.categoryName %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= category.categoryName %></h5>
                                <p class="card-text">ID: <%= category.categoryId %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-center">No categories available.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        function greet(){
            alert("Category addedd successfully");
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
