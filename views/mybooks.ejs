<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-container {
            margin-top: 20px;
            max-width: 600px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="table-container">
            <h2>Submitted Data</h2>
            <table class="table table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Contact</th>
                        <th>Book ID</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <a href="/home" class="btn btn-primary mt-3">Go Back</a>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        window.onload = function() {
            // Retrieve data from local storage
            const formData = JSON.parse(localStorage.getItem('formData'));

            if (formData) {
                // Create a new row
                const tableBody = document.getElementById('dataTable').getElementsByTagName('tbody')[0];
                const newRow = tableBody.insertRow();

                // Insert cells and their data
                newRow.insertCell().textContent = formData.userId;
                newRow.insertCell().textContent = formData.username;
                newRow.insertCell().textContent = formData.contact;
                newRow.insertCell().textContent = formData.bookId;


                // data.forEach(record => {
                //     const newRow = tableBody.insertRow();
                //     newRow.insertCell().textContent = record.userId;
                //     newRow.insertCell().textContent = record.username;
                //     newRow.insertCell().textContent = record.contact;
                //     newRow.insertCell().textContent = record.bookId;
                // });

                // Remove data from local storage
               // localStorage.removeItem('formData');
            }
        };
    </script>
</body>
</html>